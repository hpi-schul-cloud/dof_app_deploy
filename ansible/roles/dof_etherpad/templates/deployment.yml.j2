apiVersion: apps/v1
kind: Deployment
metadata:
  name: etherpad-deployment
  namespace: {{ NAMESPACE }}
{% if ANNOTATIONS is defined and ANNOTATIONS|bool %}
  annotations:
{% if RELOADER is defined and RELOADER|bool %}
    reloader.stakater.com/auto: "true"
{% endif %}
{% endif %}
  labels:
    app: etherpad
    app.kubernetes.io/part-of: schulcloud-verbund
    app.kubernetes.io/version: "{{ ETHERPAD_IMAGE_TAG }}"
    app.kubernetes.io/name: etherpad
    app.kubernetes.io/component: etherpad
    app.kubernetes.io/managed-by: ansible
    git.branch: {{ DOF_APP_DEPLOY_BRANCH_NAME }}
    git.repo: {{ DOF_APP_DEPLOY_REPO_NAME }}
spec:
  replicas: {{ ETHERPAD_REPLICAS|default(1, true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  selector:
    matchLabels:
      app: etherpad
  template:
    metadata:
      labels:
        app: etherpad
        app.kubernetes.io/part-of: schulcloud-verbund
        app.kubernetes.io/version: "{{ ETHERPAD_IMAGE_TAG }}"
        app.kubernetes.io/name: etherpad
        app.kubernetes.io/component: etherpad
        app.kubernetes.io/managed-by: ansible
        git.repo: {{ DOF_APP_DEPLOY_REPO_NAME }}
    spec:
      securityContext:
        #readOnlyRootFilesystem: true
        # run as user etherpad (uid 5001)
        runAsUser: 5001
        runAsGroup: 5001
        fsGroup: 5001
        runAsNonRoot: true
      os:
        name: linux
      containers:
      - name: etherpad
        image: {{ ETHERPAD_IMAGE_NAME }}:{{ ETHERPAD_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 9001
        env:
        envFrom:
        - configMapRef:
            name: etherpad-configmap
        - secretRef:
            name: etherpad-secret
        volumeMounts:
        - mountPath: /opt/etherpad-lite/APIKEY.txt
          subPath: APIKEY.txt
          name: apikey
        resources:
          limits:
            cpu: {{ ETHERPAD_CPU_LIMITS|default("1000m", true) }}
            memory: {{ ETHERPAD_MEMORY_LIMITS|default("1Gi", true) }}
          requests:
            cpu: {{ ETHERPAD_CPU_REQUESTS|default("100m", true) }}
            memory: {{ ETHERPAD_MEMORY_REQUESTS|default("128Mi", true) }}
        readinessProbe:
          httpGet:
            path: /health
            port: 9001
          initialDelaySeconds: 0
          timeoutSeconds: 2
          periodSeconds: 5
          failureThreshold: 3
        livenessProbe:
          httpGet:
            path: /health
            port: 9001
          initialDelaySeconds: 0
          timeoutSeconds: 2
          periodSeconds: 10
          failureThreshold: 3
        startupProbe:
          httpGet:
            path: /health
            port: 9001
          timeoutSeconds: 2
          failureThreshold:  60
          periodSeconds: 5
      volumes:
      - name: apikey
        secret:
          secretName: etherpad-secret
          items:
          - key: ETHERPAD__API_KEY
            path: APIKEY.txt
{% if AFFINITY_ENABLE is defined and AFFINITY_ENABLE|bool %}
      affinity:
        podAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 9
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app.kubernetes.io/part-of
                  operator: In
                  values:
                  - schulcloud-verbund
              topologyKey: "kubernetes.io/hostname"
              namespaceSelector: {}
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
{% if ANIT_AFFINITY_NODEPOOL_ENABLE is defined and ANIT_AFFINITY_NODEPOOL_ENABLE|bool %}
          - weight: 10
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app.kubernetes.io/name
                  operator: In
                  values:
                  - etherpad
              topologyKey: {{ ANIT_AFFINITY_NODEPOOL_TOPOLOGY_KEY }}
{% endif %}
          - weight: 20
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app.kubernetes.io/name
                  operator: In
                  values:
                  - etherpad
              topologyKey: "topology.kubernetes.io/zone"
{% endif %}
