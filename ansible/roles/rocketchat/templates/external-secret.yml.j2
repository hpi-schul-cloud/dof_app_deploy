apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: rocketchat-secret
  namespace: {{ NAMESPACE }}
  labels:
    app: rocketchat
spec:
  refreshInterval: {{ EXTERNAL_SECRETS_REFRESH_INTERVAL }}
  secretStoreRef:
    kind: SecretStore
    name: {{ EXTERNAL_SECRETS_K8S_STORE }}
  target:
    name: rocketchat-secret
    template:
      engineVersion: v2
      mergePolicy: Merge
      data:
        MONGO_URL:  "{{ '{{ .MONGO_MANAGEMENT_TEMPLATE_URL }}/' ~ MONGO_MANAGEMENT_PREFIX ~ 'rocketchat' }}"
  dataFrom:
  - extract:
      key: rocketchat-secret{{ EXTERNAL_SECRETS_POSTFIX }}
  data:
  - secretKey: MONGO_MANAGEMENT_TEMPLATE_URL
    remoteRef:
      key: mongo-cluster-common-secret
      property: credentials-url
