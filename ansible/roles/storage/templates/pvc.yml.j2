apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: storage-pvc
  namespace: {{ NAMESPACE }}
  labels:
    app: storage
spec:
  storageClassName: {{ SC_DEFAULT_STORAGE_CLASS_NAME }}
  accessModes:
  - ReadWriteOnce
  volumeMode: Filesystem
  resources:
    requests:
      storage: {{ STORAGE_CAPACITY|default("10Gi", true) }}
