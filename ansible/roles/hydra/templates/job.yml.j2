apiVersion: batch/v1
kind: Job
metadata:
  name: hydra-migrate-db-job
  namespace: {{ NAMESPACE }}
  labels:
    app: hydra
spec:
  template:
    metadata:
      labels:
        app: hydra
    spec:
      containers:
      - name: hydra-migrate
        image: {{ HYDRA_IMAGE_NAME }}:{{ HYDRA_IMAGE_TAG }}
        imagePullPolicy: Always
        envFrom:
        - configMapRef:
            name: hydra-configmap
        - secretRef:
            name: hydra-secret
        volumeMounts:
        - name: script
          mountPath: /update.sh
          subPath: update.sh
        command: ['/bin/sh','-c']
        args: ['cp /update.sh /tmp/update.run.sh && chmod +x /tmp/update.run.sh && sh /tmp/update.run.sh']
        resources:
          limits:
            cpu: {{ API_CPU_LIMITS|default("200m", true) }}
            memory: {{ API_MEMORY_LIMITS|default("20Mi", true) }}
          requests:
            cpu: {{ API_CPU_REQUESTS|default("100m", true) }}
            memory: {{ API_MEMORY_REQUESTS|default("10Mi", true) }}
      volumes:
      - name: script
        configMap:
          name: hydra-db-init-file
          items:
          - key: update.sh
            path: update.sh
      restartPolicy: Never
  backoffLimit: 3
