apiVersion: v1
kind: ConfigMap
metadata:
  name: client-nginx-redirect
  namespace: {{ NAMESPACE }}
data:
  default.conf: |
    server {
      listen 3100;
      server_name _;
      location / {
        return 302 "https://activate.{{ SC_SHORTNAME }}.dbildungscloud.dev/namespace?namespace={{ NAMESPACE }}&redirected-from-503=true";
      }
    }

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: namespace-activator-redirection
  namespace: {{ NAMESPACE }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: client
  template:
    metadata:
      labels:
        app: client
    spec:
      containers:
      - name: nginx
        image: nginx:1.27-alpine
        ports:
        - containerPort: 3100
        volumeMounts:
        - name: nginx-conf
          mountPath: /etc/nginx/conf.d
          readOnly: true
      volumes:
      - name: nginx-conf
        configMap:
          name: client-nginx-redirect
          items:
          - key: default.conf
            path: default.conf

---
apiVersion: keda.sh/v1alpha1
kind: ScaledObject
metadata:
  name: namespace-activator-redirection
  namespace: {{ NAMESPACE }}
spec:
  scaleTargetRef:
    kind: Deployment
    name: namespace-activator-redirection
  idleReplicaCount: 0
  minReplicaCount: 1
  maxReplicaCount: 1
  # this needs to be fairly low otherwise it is more likely that the client-deployment and this dummy deployment exist at the same time
  pollingInterval: 5
  cooldownPeriod: 60
  triggers:
  - type: mongodb
    metadata:
      port: "27017"
      dbName: "keda"
      collection: "namespaces"
      # scale only if namespace is not main AND not active
      query: '{"$and":[{"name":"{{ NAMESPACE }}"},{"$expr":{"$ne":["{{ NAMESPACE }}","main"]}},{"$expr":{"$not":{"$gt":["$activatedUntil","$$NOW"]}}}]}'
      queryValue: "1"
    authenticationRef:
      name: sc-common-mongodb-trigger-auth