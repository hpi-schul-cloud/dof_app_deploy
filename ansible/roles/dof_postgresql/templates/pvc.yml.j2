apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: postgres-pvc
  namespace: {{ NAMESPACE }}
  labels:
    app: postgres
spec:
  storageClassName: {{ SC_DEFAULT_STORAGE_CLASS_NAME }}
  accessModes:
  - ReadWriteOnce
  volumeMode: Filesystem
  resources:
    requests:
      storage: {{ POSTGRES_CAPACITY|default("5Gi", true) }}