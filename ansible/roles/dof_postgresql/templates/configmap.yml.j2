apiVersion: v1
kind: ConfigMap
metadata:
  name: postgres-configmap
  namespace: {{ NAMESPACE }}
  labels:
    app: postgres
data:
  # general
  POSTGRES_DB: "{{ POSTGRES_DB|default("calendar", true) }}"
  POSTGRES_USER: "{{ POSTGRES_USER|default("node", true) }}"
  PGDATA: /var/lib/postgresql/data/pgdata
  
