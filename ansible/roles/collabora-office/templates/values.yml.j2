replicaCount: {{ COLLABORA_OFFICE_REPLICAS }}
autoscaling:
  enabled: false
resources:
  limits:
    cpu: "{{ COLLABORA_OFFICE_CPU_LIMITS|default('1000m', true) }}"
    memory: "{{ COLLABORA_OFFICE_MEMORY_LIMITS|default('4Gi', true) }}"
  requests:
    cpu: "{{ COLLABORA_OFFICE_CPU_REQUESTS|default('100m', true) }}"
    memory: "{{ COLLABORA_OFFICE_MEMORY_REQUESTS|default('1Gi', true) }}"

ingress:
  enabled: false

collabora:
  existingSecret:
    enabled: true
    secretName: "collabora-admin-password"
    usernameKey: "username"
    passwordKey: "password"

  extra_params: --o:ssl.enable=false --o:num_prespawn_children=4 --o:ssl.termination=true
  aliasgroups:
    - host: 'https://{{ DOMAIN }}:443'