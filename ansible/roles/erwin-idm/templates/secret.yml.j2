#jinja2: trim_blocks: "True", lstrip_blocks: "True"
apiVersion: v1
kind: Secret
metadata:
  name: erwinidm-secret
  labels:
    app: erwinidm
  namespace: {{ NAMESPACE }}
type: Opaque
data:
  IDENTITY_MANAGEMENT__ADMIN_USER: {{ ERWINIDM_ADMIN_USER | b64encode }}
  IDENTITY_MANAGEMENT__ADMIN_PASSWORD: {{ ERWINIDM_ADMIN_PASSWORD | b64encode }}
  KEYCLOAK_ADMIN: {{ ERWINIDM_SUPERADMIN_USER | b64encode }}
  KEYCLOAK_ADMIN_PASSWORD: {{ ERWINIDM_SUPERADMIN_PASSWORD | b64encode }}
  KC_DB_URL: {{ ERWINIDM_DB_URL | b64encode }}
  KC_DB_USERNAME: {{ ERWINIDM_DB_USER | b64encode }}
  KC_DB_PASSWORD: {{ ERWINIDM_DB_PASSWORD | b64encode }}