apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: mongo-svc-monitor
  namespace: {{ NAMESPACE }}
  labels:
    app: mongo
spec:
  selector:
    matchExpressions:
      - key: app.kubernetes.io/name
        operator: In
        values:
          - mongo-svc
  endpoints:
  - interval: 15s
    port: mongo-exporter
