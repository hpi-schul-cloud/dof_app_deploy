apiVersion: batch/v1
kind: Job
metadata:
  name: mongo-cleanup-cronjob
  labels:
    app: mongo-management
    app.kubernetes.io/part-of: schulcloud-verbund
    app.kubernetes.io/name: mongo-management
    app.kubernetes.io/component: database
    app.kubernetes.io/managed-by: ansible
    git.branch: {{ DOF_APP_DEPLOY_BRANCH_NAME }}
    git.repo: {{ DOF_APP_DEPLOY_REPO_NAME }}
spec:
  template:
    metadata:
      labels:
        app: mongo
    spec:
      serviceAccountName: namespace-management
      volumes:
        - name: config-script
          configMap:
            name: mongo-configmap-deletion
            # 711 in decimal is 457
            defaultMode: 457
      containers:
        - name:  mongo-config
          image: {{ MONGO_MANAGEMENT_JOB_IMAGE }}
          command:
            - /bin/bash
            - -c
          args:
            - /scripts/config_script.sh
          resources:
            limits:
              cpu: 1000m
              memory: 1Gi
            requests:
              cpu: 100m
              memory: 200Mi
          volumeMounts:
            - name: config-script
              mountPath: /scripts/
          env:
            - name: MONGO_URL
              valueFrom:
                secretKeyRef:
                  name: mongo-cluster-admin-secret
                  key: credentials-url
      restartPolicy: Never
  suspend: true
  ttlSecondsAfterFinished: 0